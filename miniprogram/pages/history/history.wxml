<view class="page" data-weui-theme="{{theme}}">
  <view class="weui-cells demo_badge_cells" wx:for="{{historyList}}" wx:key="key">
      <view class="weui-cell weui-cell_active weui-cell_access"  data-item="{{item}}" bindtap="showDetail">    
        <view class="weui-cell__bd">
          <!-- <text class="demo_badge_title">历史记录</text> -->
          <text class="demo_badge_title">{{item.expendTotal}}元</text>
          <text class="time">{{item.create_date}}</text>
        </view>
      </view>
   </view>

<view wx:if="{{ popover}}" class="back" bindtap="hide"></view>
    <view wx:if="{{ popover}}" class="popover">
      <form class="weui-form__control-area" bindsubmit='submit'>
        <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells weui-cells_form" wx:for="{{debtAccountList}}" wx:key="key">
            <view class="weui-cell " style="padding: 10px 0px;" data-item="{{item}}">
                <view>
                  <iconfont name="{{item.type_icon}}" size="30" style="float:left" ></iconfont>
                </view>
                <view>{{item.expend_type}}</view>
                <text style="float:right">{{item.rmb}}元</text>
                <!-- <view>{{item.create_date}}</view> -->
              
            </view>
          </view>
        </view>
      </form>
      
    </view>

</view>