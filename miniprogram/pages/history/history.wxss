/* pages/history/history.wxss */
.page{
  height: 100%;
  width: 100%;
}
.weui-flex{
  padding:10px;
}
.weui-flex__item{
  display: flex;
  align-items: center;
}
.time{
  float: right;
  margin-left: auto;
}

.back {
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.5;
  position: fixed;
  top: 0;
  left: 0;
}
 
.popover {
  z-index: 2;
  border-radius: 10rpx;
  width: 700rpx;
  height: 950rpx;
  background-color: white;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  line-height: 400rpx;
  justify-content: center;
} 

.weui-form__control-area{
  margin: 20px 0;
}
.item-icon{
  height: 50rpx;
  /* position: absolute; */
}
.item-content{
  margin-top: 20rpx;
  height: 50px;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 7px 5px -5px #c1c1c1;
}
.type_text{
  margin-left: 10px;
}