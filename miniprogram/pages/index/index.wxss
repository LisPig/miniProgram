/* tabs功能css模块代码 */

.navigation {
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 36px;
  background-color: lightgray;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.navigation .nav-scroll{
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #F7F7F7;
  font-size: 17px;
  white-space: nowrap;
  position: fixed;
  /* top: 0; */
  left: 0;
  z-index: -99;
}
.navigation .nav-scroll .nav-item{
  margin:0 36rpx;
  display: inline-block;
}
.navigation .nav-scroll .nav-item.active{
  color: #466ee6;
  position: relative;
}
.navigation .nav-scroll .nav-item.active:after{
  content: "";
  display: block;
  height: 4rpx;
  width: 100%;
  background: #466ee6;
  position: absolute;
  bottom: 0;
  left: 0;
}

